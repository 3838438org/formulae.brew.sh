<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html itemscope itemtype="http://schema.org/WebPage"
      xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title><%= title %></title>

  <%= auto_discovery_link_tag :atom, feed_path(format: :atom) %>
  <%= javascript_include_tag 'application' %>
  <%= stylesheet_link_tag 'application' %>
  <%= csrf_meta_tag %>

  <link rel="search" type="application/opensearchdescription+xml" title="braumeister.org" href="/opensearch.xml">
  <%= yield :kaminari %>

  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <meta itemprop="name" content="braumeister.org" />
  <meta itemprop="description" content="An online package browser for Homebrew, the MacOS package manager." />

  <script src="https://apis.google.com/js/plusone.js" type="text/javascript"></script>
  <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>

  <% if Rails.env == 'production' %>
  <script type="text/javascript">
      var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-258817-9']);
    _gaq.push(['_trackPageview']);
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
  <% end %>
</head>
<body>
    <a href="https://github.com/koraktor/braumeister.org">
        <img id="github-ribbon"
             src="http://s3.amazonaws.com/github/ribbons/forkme_left_orange_ff7600.png"
             alt="Fork me on GitHub" />
    </a>
    <div id="header">
        <div id="social">
            <g:plusone href="http://braumeister.org" size="tall"></g:plusone>
            <a href="http://twitter.com/share" class="twitter-share-button"
               data-count="vertical"
               data-text="See information about Mac packages available via Homebrew – "
               data-url="http://braumeister.org">
                Tweet
            </a>
            <iframe src="//www.facebook.com/plugins/like.php?href=http%3A%2F%2Fbraumeister.org&amp;send=false&amp;layout=box_count&amp;width=48&amp;show_faces=true&amp;action=like&amp;colorscheme=light&amp;font&amp;height=62&amp;locale=en_US" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:48px; height:62px;" allowTransparency="true"></iframe>
            <a class="FlattrButton" style="display:none;" href="http://braumeister.org"></a>
            <noscript><a href="http://flattr.com/thing/461937/Braumeister-org" target="_blank">
            <img src="http://api.flattr.com/button/flattr-badge-large.png" alt="Flattr this" title="Flattr this" border="0" /></a></noscript>
        </div>
        <%= link_to 'Braumeister', root_path %>
    </div>
    <div id="content">
        <% if flash[:error] %>
            <div id="flash-error"><%= flash[:error].html_safe %></div>
        <% end %>
        <% if flash[:notice] %>
            <div id="flash-notice"><%= flash[:notice].html_safe %></div>
        <% end %>
        <%= yield %>
    </div>
    <div id="footer">
        © 2012-2013 —
        <a href="https://plus.google.com/109586181974940228820?rel=author">
        Sebastian Staudt</a><br />
        Follow <a href="https://twitter.com/braumeister_org">@braumeister_org</a>
        on Twitter.
    </div>
</body>
</html>
